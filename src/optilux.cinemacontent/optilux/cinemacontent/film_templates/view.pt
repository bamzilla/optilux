<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="optilux.cinemacontent">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

        <div>
            <label for="startDate" i18n:translate="label_promotion_shown_from">Shown from:</label>
            <span id="startDate" tal:content="view/startDateFormatted" />
        </div>
        
        <div>
            <label for="endDate" i18n:translate="label_promotion_shown_until">Shown until:</label>
            <span id="endDate" tal:content="view/endDateFormatted" />
        </div>

        <div class="film-banner">
            <img tal:replace="structure context/@@images/image/thumb" />
        </div>
        
        <div tal:replace="structure context/teaser/output" />
        
    </metal:content-core>
</metal:content-core>

</body>
</html>

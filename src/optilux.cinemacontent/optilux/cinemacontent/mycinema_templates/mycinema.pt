<div i18n:domain="optilux.cinemacontent" tal:condition="viewlet/available">
    <form method="get" tal:attributes="action context/absolute_url">
        
        <input tal:replace="structure context/@@authenticator/authenticator" />
        
        <input
            tal:condition="not:viewlet/isHome"
            class="context"
            type="submit"
            name="optilux.cinemacontent.mycinema.Toggle"
            value="This is my home cinema"
            i18n:attributes="value"
            />
        
        <input
            tal:condition="viewlet/isHome"
            class="context"
            type="submit"
            name="optilux.cinemacontent.mycinema.Toggle"
            value="This is not my home cinema"
            i18n:attributes="value"
            />
    
    </form>
</div>
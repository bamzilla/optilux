<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="optilux.cinemacontent">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">
        
        <label for="parent-fieldname-phone" i18n:translate="label_cinema_phone_number">Phone number:</label>
        <div metal:use-macro="python:context.widget('phone', mode='view')" />

        <div class="highlighted-films" tal:condition="view/haveHighlightedFilms">
            <h3 i18n:translate="heading_featured_films">Featured films:</h3>
            <div tal:repeat="film view/highlightedFilms">
                <a tal:attributes="href film/url; title film/summary">
                    <img tal:replace="structure film/bannerTag" />
                    <div tal:content="film/title" />
                </a>
            </div>
        </div>

        <div metal:use-macro="python:context.widget('text', mode='view')" />        
        
    </metal:content-core>
</metal:content-core>

</body>
</html>
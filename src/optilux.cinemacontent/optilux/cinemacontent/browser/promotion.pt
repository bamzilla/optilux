<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="optilux.cinemacontent">
<body>

<metal:content-core fill-slot="content-core">
    <metal:content-core define-macro="content-core">

        <div>
            <label for="parent-fieldname-startDate" i18n:translate="label_promotion_shown_from">Valid from:</label>
            <div metal:use-macro="python:context.widget('effectiveDate', mode='view')" />
        </div>
        
        <div>
            <label for="parent-fieldname-expirationDate" i18n:translate="label_promotion_shown_from">Valid until:</label>
            <div metal:use-macro="python:context.widget('expirationDate', mode='view')" />
        </div>

        <div class="promotion-banner">
            <img tal:replace="structure view/bannerTag" />
        </div>

        <div metal:use-macro="python:context.widget('details', mode='view')" />

    </metal:content-core>
</metal:content-core>

</body>
</html>
